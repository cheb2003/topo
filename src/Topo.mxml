<?xml version="1.0"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:topo="my.ui.topo.*" creationComplete="fn()">
    <fx:Script><![CDATA[

        import my.ui.topo.Node;



        private var node:Node;
        private function fn():void{
            node = new Node();
            node.x = 100;
            node.y = 100;
            topo.addElement(node);
        }
        private function moveNode():void {
            node.x = 200
            node.y = 200
        }
        ]]></fx:Script>


    <topo:Topo id="topo" backgroundColor="#0088cc" width="100%" height="100%"/>
    <s:Button click="moveNode()"/>
</s:Application>
