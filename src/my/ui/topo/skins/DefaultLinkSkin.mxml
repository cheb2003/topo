<?xml version="1.0"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%" xmlns:topo="my.ui.topo.*">
    <fx:Metadata>
        <![CDATA[
        [HostComponent("my.ui.topo.Link")]
        ]]>
    </fx:Metadata>
    <s:states>
        <s:State name="normal"/>
        <s:State name="selected"/>
        <s:State name="mouseOver"/>
		<fx:Script>
			<![CDATA[
				import spark.primitives.Line;
			]]>
		</fx:Script>
    </s:states>
	<topo:LinkLine id="line" xFrom="{hostComponent.startNode.x+hostComponent.startNode.skin.width/2}" 
				   xTo="{hostComponent.endNode.x+(hostComponent.endNode.skin.width/2)}" 
				   yFrom="{hostComponent.startNode.y+(hostComponent.startNode.skin.height/2)}" 
				   yTo="{hostComponent.endNode.y+(hostComponent.endNode.skin.height/2)}"
				   isDirectRelation="{hostComponent.isDirectRelation}" link="{hostComponent}"/>
	
	<topo:LinkDecoration visible.mouseOver="true" visible="false" includeInLayout.mouseOver="true" includeInLayout="false"
						x="{(line.xFrom+line.xTo)/2}" y="{(line.yFrom+line.yTo)/2}"/>
</s:SparkSkin>
