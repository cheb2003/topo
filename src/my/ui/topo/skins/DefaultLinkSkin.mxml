<?xml version="1.0"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%">
    <fx:Metadata>
        <![CDATA[
        [HostComponent("my.ui.topo.Link")]
        ]]>
    </fx:Metadata>
	
    <s:states>
        <s:State name="normal"/>
        <s:State name="selected"/>
        <s:State name="mouseOver"/>
    </s:states>
    <s:Line xFrom="{hostComponent.startNode.x+hostComponent.startNode.width/2}" xTo="{hostComponent.endNode.x+(hostComponent.endNode.width/2)}" yFrom="{hostComponent.startNode.y+(hostComponent.startNode.height/2)}" yTo="{hostComponent.endNode.y+(hostComponent.endNode.height/2)}">
		<s:stroke>
			<s:SolidColorStroke color="0x00ff33" weight="1" caps="square"/>
		</s:stroke>
	</s:Line>
</s:SparkSkin>
