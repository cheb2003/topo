<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("my.ui.topo.LinkTip")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="mouseOver"/>
	</s:states>

	<s:BorderContainer cornerRadius="5" borderColor="0xA5A5A5" useHandCursor="true" depth="{int.MAX_VALUE}" buttonMode="true" mouseChildren="false"
					   width="180" height="37" borderWeight="2" y="-55" x="-30" backgroundColor.mouseOver="0x544E6C">
		<s:Label x="5" y="13" text=">>" color="0x4fBEF1" fontWeight="bold" color.mouseOver="0xffffff"/>
		<s:Label x="20" y="5" text="{hostComponent.linkName}" color="0x38A852" fontSize="14" color.mouseOver="0xffffff"/>
		<s:Label x="20" y="19" text="{hostComponent.linkInfo}" color="0x0ccff" fontSize="10" color.mouseOver="0xffffff"/>
	</s:BorderContainer>
</s:SparkSkin>
